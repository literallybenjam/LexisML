<?xml version="1.0" encoding="utf-8"?>
<l:word xmlns="http://www.w3.org/1999/xhtml" xmlns:l="about:lexisml?word" xml:lang="en">
    <!--  Note that only HTML elements which can be considered phrasing content are allowed in LexisML documents  -->
    <l:lemma>sample item</l:lemma> <!--  "standard" representation  -->
    <l:entry>
        <l:etymology>EN <i>sample</i> + <i>item</i></l:etymology> <!--  optional : etymological data  -->
        <l:aside>this is a sample LexisML word file</l:aside> <!--  optional : an aside  -->
        <l:section> <!--  a grouping of definitions  -->
            <l:heading>noun</l:heading> <!--  optional : a heading for the section  -->
            <l:alts>sample-item, itemsample</l:alts> <!--  optional : alternate representations go here  -->
            <l:def>an item which is offered up for sampling</l:def> <!--  word definition  -->
            <l:def>an item which is presented as a sample</l:def>
            <l:def><a href="./sample-word.xml">this document</a></l:def>
        </l:section>
        <!--  Multiple sections can be used for different parts of speech, etc.  -->
    </l:entry>
    <!--  Multiple entries can be used for separate lexemes with the same lemma  -->
</l:word>
