<?xml version="1.0" encoding="utf-8"?>
<lexis xmlns="about:lexisml?lexis" xmlns:html="http://www.w3.org/1999/xhtml" xml:lang="en">
    <meta type="title">Sample Lexis</meta>
    <meta type="description">A sample LexisML Lexis file using the new syntax</meta>
    <meta type="splash"><html:em>Splash content!</html:em></meta>
    <!--  Multiple <meta type="splash"> elements are allowed  -->
    <taggroup name="Some tags"> <!-- <taggroup> elements group tags! -->
        <tag value="tag1">A tag</tag> <!--  Reference tags by their value attribute; these must be unique and space-free  -->
        <tag value="tag2">An unused tag</tag>
    </taggroup>
    <tag value="tag3">Another tag</tag> <!--  Tags don't have to be in <taggroups>  -->
    <item src="sample-item.xml" tag="tag1 tag3">sample item</item>
</lexis>
